    "version": "0.2.0",
    "configurations": [
      {
        "name": "Example",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "node",
        "runtimeArgs": [
          "--experimental-specifier-resolution=node",
          "--loader",
          "ts-node/esm"
        ],
  
        "args": ["${workspaceFolder}\\src\\index.ts"],
  
        "cwd": "${workspaceRoot}",
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": ["<node_internals>/**", "node_modules/**"]
      }
    ]
  }